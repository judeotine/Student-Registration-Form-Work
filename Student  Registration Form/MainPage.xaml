<Page
    x:Class="Student__Registration_Form.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Student__Registration_Form"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
    <Page.Resources>
        <Style x:Key="allbuttons" TargetType="Button">
            <Setter Property="Background" Value="BurlyWood"/>
            <Setter Property="Margin" Value="0,10,0,0"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="CornerRadius" Value="10"/>
        </Style>
        <Style x:Key="alltextboxes" TargetType="TextBox">
            <Setter Property="CornerRadius" Value="10"/>
            
        </Style>
    </Page.Resources>
    <Grid Padding="40" >
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="300" Spacing="10">
            <TextBlock Text="Student Registration Form" 
                       FontSize="20" 
                       FontWeight="Bold" 
                       HorizontalAlignment="Center" 
                       Margin="0,0,0,20"/>

            <TextBox Style="{StaticResource alltextboxes}"
                     x:Name="NameBox" 
                     PlaceholderText="Enter Name"
                     />
            <TextBox Style="{StaticResource alltextboxes}" 
                     x:Name="IdBox" 
                     PlaceholderText="Enter Student ID"
                     />
            <TextBox Style="{StaticResource alltextboxes}"
                     x:Name="CourseBox" 
                     PlaceholderText="Enter Course Name"
                     />
            <TextBox Style="{StaticResource alltextboxes}"
                     x:Name="EmailBox" 
                     PlaceholderText="Enter Email"
                     />
            <TextBox Style="{StaticResource alltextboxes}"
                     x:Name="PhoneBox" 
                     PlaceholderText="Enter Phone"
                     />

            <Button Style="{StaticResource allbuttons}" 
                    Content="Greet Student" 
                    Click="GreetStudent_Click" 
                    />
            <Button Style="{StaticResource allbuttons}" 
                    Content="Show Course" 
                    Click="ShowCourse_Click" 
                    />
            <Button Style="{StaticResource allbuttons}" 
                    Content="Show Contacts" 
                    Click="ShowContacts_Click" 
                    />
            <Button Style="{StaticResource allbuttons}" 
                    Content="Confirm Registration" 
                    Click="ConfirmRegistration_Click" 
                    />
        </StackPanel>

    </Grid>
</Page>
