<Page
    x:Class="Student__Registration_Form.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Student__Registration_Form"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid Padding="40">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="300" Spacing="10">
            <TextBlock Text="Student Registration Form" 
                       FontSize="20" 
                       FontWeight="Bold" 
                       HorizontalAlignment="Center" 
                       Margin="0,0,0,20"/>

            <TextBox x:Name="NameBox" 
                     PlaceholderText="Enter Name"
                     />
            <TextBox x:Name="IdBox" 
                     PlaceholderText="Enter Student ID"
                     />
            <TextBox x:Name="CourseBox" 
                     PlaceholderText="Enter Course Name"
                     />
            <TextBox x:Name="EmailBox" 
                     PlaceholderText="Enter Email"
                     />
            <TextBox x:Name="PhoneBox" 
                     PlaceholderText="Enter Phone"
                     />

            <!-- Buttons -->
            <Button Content="Greet Student" 
                    Click="GreetStudent_Click" 
                    Margin="0,10,0,0" 
                    Background="#DDAA66"/>
            <Button Content="Show Course" 
                    Click="ShowCourse_Click" 
                    Background="#DDAA66"/>
            <Button Content="Show Contacts" 
                    Click="ShowContacts_Click" 
                    Background="#DDAA66"/>
            <Button Content="Confirm Registration" 
                    Click="ConfirmRegistration_Click" 
                    Background="#DDAA66"/>
        </StackPanel>

    </Grid>
</Page>
